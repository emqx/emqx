%% -*- mode: erlang -*-
{deps, [
    {emqx_plugin_helper, {git, "https://github.com/emqx/emqx-plugin-helper.git", {tag, "v5.9.2"}}}
]}.

{plugins, [
    {emqx_plugin_helper, {git, "https://github.com/emqx/emqx-plugin-helper.git", {tag, "v5.9.2"}}}
]}.

{erl_opts, [debug_info]}.

{project_plugins, [{erlfmt, "1.6.0"}]}.

{relx, [
    {release, {emqx_username_quota, "1.0.0"}, [
        emqx_username_quota,
        emqx_plugin_helper
    ]},
    {dev_mode, false},
    {include_erts, false},
    {include_src, false}
]}.

{emqx_plugrel, [
    {authors, ["EMQX"]},
    {builder, [
        {name, "EMQX"},
        {contact, "developer@emqx.io"},
        {website, "https://www.emqx.com"}
    ]},
    {repo, "https://github.com/emqx/emqx"},
    {functionality, ["Username Quota Skeleton"]},
    {compatibility, [{emqx, "~> 6.1"}]},
    {description, "Skeleton plugin app for username-based quota checks."}
]}.
