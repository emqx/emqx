%% -*- mode: erlang -*-
{deps, [
    {emqx_plugin_helper, {git, "https://github.com/emqx/emqx-plugin-helper.git", {tag, "v5.9.2"}}}
]}.

{plugins, [
    {emqx_plugrel, {git, "https://github.com/emqx/emqx_plugrel.git", {tag, "0.6.3"}}}
]}.

{erl_opts, [debug_info]}.

{project_plugins, [{erlfmt, "1.6.0"}]}.

%% Sync release version to app version
%% in app.src, {vsn, {file, "VERSION"}} is used
{pre_hooks, [
    {"(linux|darwin)", compile,
        "erl -noshell -eval '{ok, Terms} = file:consult(\"rebar.config\"), "
        "{relx, Relx} = lists:keyfind(relx, 1, Terms), "
        "{release, {_, Vsn}, _} = lists:keyfind(release, 1, Relx), "
        "ok = file:write_file(\"VERSION\", [Vsn, $\\n]), "
        "halt().'"}
]}.

{relx, [
    {release, {emqx_username_quota, "1.0.0"}, [
        emqx_username_quota,
        emqx_plugin_helper
    ]},
    {dev_mode, false},
    {include_erts, false},
    {include_src, false}
]}.

{emqx_plugrel, [
    {authors, ["EMQX"]},
    {builder, [
        {name, "EMQX"},
        {contact, "developer@emqx.io"},
        {website, "https://www.emqx.com"}
    ]},
    {repo, "https://github.com/emqx/emqx"},
    {functionality, ["Username Quota"]},
    {compatibility, [{emqx, "~> 6.0"}]},
    {description, "Plugin for username-based quota checks."}
]}.
